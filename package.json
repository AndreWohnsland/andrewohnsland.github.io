{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend API for my React App",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client-install": "npm install --prefix client",
    "postinstall": "npm run tsc",
    "tsc": "tsc",
    "start": "node dist/index.js",
    "server": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/index.ts\"",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client-deploy": "npm run deploy --prefix client",
    "api-deploy": "git push heroku master",
    "api-follow-logs": "heroku logs -t"
  },
  "keywords": [],
  "author": "Andre Wohnsland",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.19.0",
    "buffer-image-size": "^0.6.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dropbox-v2-api": "^2.5.11",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.0",
    "mongoose-unique-validator": "^5.0.0",
    "pino": "^9.1.0",
    "sharp": "^0.32.1"
  },
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/sharp": "^0.32.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.3.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
