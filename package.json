{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend API for my React App",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client-install": "npm install --prefix client",
    "postinstall": "npm run tsc",
    "tsc": "tsc",
    "start": "node dist/index.js",
    "server": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/index.ts\"",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client-deploy": "npm run deploy --prefix client",
    "api-deploy": "git push heroku master",
    "api-follow-logs": "heroku logs -t"
  },
  "keywords": [],
  "author": "Andre Wohnsland",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "buffer-image-size": "^0.6.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "dropbox-v2-api": "^2.4.38",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.1",
    "mongoose-unique-validator": "^4.0.0",
    "pino": "^8.6.0",
    "sharp": "^0.32.1"
  },
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-fileupload": "^1.1.6",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.1.4",
    "@types/sharp": "^0.32.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.24.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
