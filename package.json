{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend API for my React App",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client-install": "npm install --prefix client",
    "start": "tsc && node dist/server.js",
    "server": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/server.ts\"",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client-deploy": "npm run deploy --prefix client",
    "api-deploy": "git push heroku master",
    "api-follow-logs": "heroku logs -t"
  },
  "keywords": [],
  "author": "Andre Wohnsland",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "buffer-image-size": "^0.6.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dropbox-v2-api": "^2.4.38",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.0",
    "mongoose-unique-validator": "^2.0.3",
    "multer": "^1.4.2",
    "multer-gridfs-storage": "^4.2.0",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0",
    "sharp": "^0.26.2"
  },
  "engines": {
    "node": "12.x"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-fileupload": "^1.1.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose-unique-validator": "^1.0.4",
    "@types/node": "^14.14.35",
    "@types/pino": "^6.3.6",
    "@types/sharp": "^0.27.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
